rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Professionals can edit their own profile.
    // ANY authenticated user can UPDATE the avgRating and totalReviews fields.
    // This is necessary for the cloud function to work when a client leaves a review.
    match /professionalsDetails/{professionalId} {
      allow read: if true;
      allow create: if request.auth.uid == professionalId;
      allow update: if request.auth.uid == professionalId || (request.auth != null && request.resource.data.keys().hasOnly(['avgRating', 'totalReviews']));
    }

    // Allow public read access to users (for names, photos) but restrict write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId; // Only the user can edit their own data
    }
    
    // Allow public read access to job requests
    match /jobRequests/{jobRequestId} {
      allow read: if true;
      allow create: if request.auth != null; // Any authenticated user can create a job request
      allow update: if resource.data.clientId == request.auth.uid; // Only the creator can update (e.g., to close)
    }

    // Allow any authenticated user to create a review
    // Allow public read access to reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // Allow admin to manage ad banners
    match /adBanners/{bannerId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
