rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helper Functions ---
    // Función para verificar si el usuario es el administrador
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'berrojalbizjulieta@gmail.com';
    }

    // --- Collection Rules ---

    // Colección 'users'
    // Lectura: Cualquier usuario autenticado.
    // Escritura: Solo el dueño del documento o un administrador.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Colección 'professionalsDetails'
    // Lectura: Cualquiera puede leer.
    // Creación/Eliminación: Solo el dueño del perfil o un administrador.
    // Actualización: El dueño, un admin, o CUALQUIER usuario autenticado. 
    // Esta última condición es para que la Cloud Function (que se ejecuta en nombre de un cliente) pueda actualizar avgRating.
    match /professionalsDetails/{profId} {
      allow read: if true;
      allow create: if request.auth.uid == profId || isAdmin();
      allow update: if request.auth.uid == profId || isAdmin() || request.auth != null;
      allow delete: if request.auth.uid == profId || isAdmin();
    }

    // Colección 'reviews' (Colección principal)
    // Lectura: Cualquiera puede leer.
    // Creación: Cualquier usuario autenticado puede crear una reseña.
    // Actualización/Eliminación: Nadie, para mantener la integridad de las reseñas.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Por seguridad, no se pueden editar ni borrar.
    }

    // Colección 'adBanners'
    // Lectura: Cualquiera.
    // Escritura: Solo administradores.
    match /adBanners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Colección 'jobRequests'
    // Lectura: Cualquiera.
    // Creación: Solo el cliente autenticado que crea el trabajo.
    // Actualización/Eliminación: Solo el cliente propietario del trabajo o un admin.
    match /jobRequests/{jobId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;
      allow update, delete: if (request.auth != null && request.auth.uid == resource.data.clientId) || isAdmin();
    }
  }
}
