rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para los banners publicitarios
    match /adBanners/{allPaths=**} {
      // Permite que cualquiera lea los banners (para que se muestren en la web)
      allow read: if true;
      // Solo permite que usuarios autenticados escriban (suban) nuevos banners
      allow write: if request.auth != null;
    }
    // Reglas para los avatares de los profesionales
    match /professional-avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Reglas para las fotos de trabajos de los profesionales
    match /professional-work-photos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
     // Reglas para los documentos de verificaci√≥n
    match /verification-docs/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId; // Solo el usuario y admins (con reglas de bucket) pueden leer
      allow write: if request.auth != null && request.auth.uid == userId;
    }
     // Reglas para las fotos de los anuncios de trabajo
    match /job-requests/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}