rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /user-avatars/{allPaths=**} {
      // Cualquiera puede leer las fotos de perfil
      allow read;
      // Solo los usuarios autenticados pueden subir/escribir archivos en esta carpeta
      allow write: if request.auth != null;
    }
  }
}
